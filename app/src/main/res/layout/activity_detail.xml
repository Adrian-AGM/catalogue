<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>

        <variable
            name="item"
            type="com.luismunyoz.catalogue.ui.entity.UIProduct"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screens.DetailActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/detailAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detailToolbar"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_width="match_parent"
                android:minHeight="?android:attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:title="@{item.title}"
                app:layout_scrollFlags="scroll|enterAlways"/>

        </com.google.android.material.appbar.AppBarLayout>

        <include
            android:id="@+id/product"
            layout="@layout/layout_product_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detailAppBarLayout"></include>

        <TextView
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_light"
            android:text="@{item.description}"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="5dp"
            tools:text="Description Lorem Ipsum bla, bla, bla... #description #tags #moretags #thisisnoinstagram"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/product"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>